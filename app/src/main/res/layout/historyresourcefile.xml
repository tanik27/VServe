<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_weight="1"
    android:padding="16dp"
    tools:context=".UI.HistoryActivity">
<android.support.constraint.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewLocationHistory"
        android:layout_width="312dp"
        android:layout_height="47dp"
        android:textColor="@color/Grey"
        android:textColorHighlight="@color/Black"
        android:textSize="12dp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="45dp"
        tools:layout_editor_absoluteY="8dp" />

    <TextView
        android:id="@+id/textViewMechanicNameHistory"
        android:layout_width="243dp"
        android:layout_height="53dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/Grey"
        android:textColorHighlight="@color/Black"
        android:textSize="12dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewLocationHistory" />

    <TextView
        android:id="@+id/textViewMechanicPhoneHistory"
        android:layout_width="193dp"
        android:layout_height="51dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/Grey"
        android:textColorHighlight="@color/Black"
        android:textSize="12dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMechanicNameHistory" />

    <TextView
        android:id="@+id/textViewMechanicAddressHistory"
        android:layout_width="372dp"
        android:layout_height="95dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/Grey"
        android:textColorHighlight="@color/Black"
        android:textSize="12dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMechanicPhoneHistory" />

    <TextView
        android:id="@+id/textViewServiceHistory"
        android:layout_width="340dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/Grey"
        android:textColorHighlight="@color/Black"
        android:textSize="12dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMechanicAddressHistory" />
    <TextView
        android:id="@+id/textViewNullHistory"
        android:layout_width="236dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textColor="@color/Grey"
        android:textColorHighlight="@color/Black"
        android:textSize="12dp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewServiceHistory" />
</android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>